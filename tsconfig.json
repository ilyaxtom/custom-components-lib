{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2017",
        "lib": ["DOM", "ES2017"],
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["jest", "@testing-library/jest-dom"],
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "esModuleInterop": true
        }
    },
    "include": ["src", "jest.setup.ts", "**/*.test.ts", "**/*.test.tsx", "config"]
}